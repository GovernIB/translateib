<?xml version="1.0" encoding="UTF-8"?>
<beans	xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:jee="http://www.springframework.org/schema/jee"
		xsi:schemaLocation="
				http://www.springframework.org/schema/beans
				http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
				http://www.springframework.org/schema/jee
				http://www.springframework.org/schema/jee/spring-jee-4.3.xsd">


	<!-- JBoss 7  -->
	<jee:local-slsb
			id="securityService"
			jndi-name="java:app/translatorib-core/SecurityServiceBean"
			business-interface="es.caib.translatorib.core.api.service.SecurityService"/>


	<jee:local-slsb
			id="systemService"
			jndi-name="java:app/translatorib-core/SystemServiceBean"
			business-interface="es.caib.translatorib.core.api.service.SystemService"/>

	<jee:local-slsb
			id="traduccionService"
			jndi-name="java:app/translatorib-core/TraduccionServiceBean"
			business-interface="es.caib.translatorib.core.api.service.TraduccionService"/>

	<jee:local-slsb
			id="configuracionGlobalService"
			jndi-name="java:app/translatorib-core/ConfiguracionGlobalServiceBean"
			business-interface="es.caib.translatorib.core.api.service.ConfiguracionGlobalService"/>

	<jee:local-slsb
			id="configuracionFrontalService"
			jndi-name="java:app/translatorib-core/ConfiguracionFrontalServiceBean"
			business-interface="es.caib.translatorib.core.api.service.ConfiguracionFrontalService"/>
