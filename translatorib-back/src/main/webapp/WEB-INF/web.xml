<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>translatorib-back</display-name>

  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <listener>
    <listener-class>org.springframework.web.context.request.RequestContextListener</listener-class>
  </listener>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>/WEB-INF/translatorib-ac-backend-jboss.xml
    			 /WEB-INF/translatorib-ac-backend.xml
    </param-value>
  </context-param>
  <filter>
    <filter-name>CharacterEncoding</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>forceEncoding</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>CharacterEncoding</filter-name>
    <url-pattern>*</url-pattern>
  </filter-mapping>
  <listener>
    <listener-class>com.sun.faces.config.ConfigureListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>Faces Servlet</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
  	<servlet-name>AyudaServlet</servlet-name>
   <servlet-class>es.caib.translatorib.backend.servlet.AyudaServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Faces Servlet</servlet-name>
    <url-pattern>*.xhtml</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
	   <servlet-name>AyudaServlet</servlet-name>
	   <url-pattern>/secure/app/AyudaServlet</url-pattern>
  </servlet-mapping>
  <context-param>
    <param-name>javax.faces.DEFAULT_SUFFIX</param-name>
    <param-value>.xhtml</param-value>
  </context-param>
  <context-param>
    <param-name>primefaces.THEME</param-name>
    <param-value>sagabluecaib</param-value>
  </context-param>
  <context-param>
	<param-name>primefaces.FONT_AWESOME</param-name>
    <param-value>true</param-value>
  </context-param>
  <!-- Restringir acceso a cualquier URL bajo la raíz ("/") para cualquier usuario autenticado -->
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>BASIC</web-resource-name>
      <!-- Protege todas las rutas que comienzan con / -->
      <url-pattern>/viewTraducir.xhtml</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <!-- Cualquier usuario autenticado -->
      <role-name>*</role-name>
    </auth-constraint>
  </security-constraint>

  <!-- Restringir acceso a la ruta "/secure/app" solo para usuarios con rol TIB_ADMIN -->
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>SecureAppAccess</web-resource-name>
      <url-pattern>/secure/app</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <!-- Solo usuarios con el rol TIB_ADMIN pueden acceder -->
      <role-name>TIB_ADM</role-name>
    </auth-constraint>
  </security-constraint>
  <!--
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>translatorib-backend</web-resource-name>
      <url-pattern>/secure/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>TIB_ADM</role-name>
    </auth-constraint>
  </security-constraint>
  -->
  <!-- Configuración para el acceso a index.html solo requiere autenticación -->
  <login-config>
    <!--<auth-method>${loginConfig.authMethod}</auth-method>-->
    <!--TODO -->
    <auth-method>BASIC</auth-method>
    <realm-name>Autenticacion</realm-name>
  </login-config>
  <security-role>
    <role-name>TIB_ADM</role-name>
  </security-role>
  <security-role>
    <role-name>*</role-name>
  </security-role>
  <welcome-file-list>
    <welcome-file>viewTraducir.xhtml</welcome-file>
  </welcome-file-list>
  <session-config>
    <session-timeout>30</session-timeout>
    <tracking-mode>COOKIE</tracking-mode>
  </session-config>
  <error-page>
    <exception-type>javax.faces.application.ViewExpiredException</exception-type>
    <location>/error/errorSesionExpirada.xhtml</location>
  </error-page>
  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/error/errorException.xhtml</location>
  </error-page>
  <error-page>
    <error-code>403</error-code>
    <location>/error/errorCode.xhtml?errorCode=403</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/error/errorCode.xhtml?errorCode=404</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/error/errorCode.xhtml?errorCode=500</location>
  </error-page>

</web-app>